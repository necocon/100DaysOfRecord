{
    "manifest_version": 2,
    "name": "100DaysOfRecord（ストアへのリンク）",
    "version": "1.0.0",
    "description": "勉强日数をカウントして、100DaysOfCodeのハッシュタグ付きで日数をペーストできる拡張機能。",
    "icons": {
        "16": "icon/cat_pc_icon_16.png",
        "32": "icon/cat_pc_icon_32.png",
        "48": "icon/cat_pc_icon_48.png",
        "128": "icon/cat_pc_icon_128.png"
    },
    "background": {
        "scripts": ["src/background/background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/content/content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "src/popup/popup.html",
        "default_icon": {
            "16": "icon/cat_pc_icon_16.png",
            "32": "icon/cat_pc_icon_32.png",
            "48": "icon/cat_pc_icon_48.png",
            "128": "icon/cat_pc_icon_128.png"
        },
        "default_title": "100DaysOfRecord"
    },
    "permissions": [
        "contextMenus",
        "tabs",
        "*://*/*"
    ]
}